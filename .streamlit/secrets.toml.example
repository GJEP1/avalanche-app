# Streamlit Authenticator Configuration
# Copy this file to secrets.toml and update the values

[cookie]
name = "avalanche_app_cookie"
key = "your-secret-key-change-this"  # Generate a random string
expiry_days = 30

[credentials]
usernames = {}

# Initial admin user
# Generate password hash with: python -c "import bcrypt; print(bcrypt.hashpw('yourpassword'.encode(), bcrypt.gensalt()).decode())"
[credentials.usernames.admin]
email = "admin@example.com"
name = "Administrator"
password = "$2b$12$..."  # bcrypt hash of your password
